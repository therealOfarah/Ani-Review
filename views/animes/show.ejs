<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/show.css">
  <link rel="stylesheet" href="/stylesheets/style2.css">
  <link id="favicon" rel="icon" href="/favicon/favicon (1).ico" type="image">
  <%- include('../partials/nav') %>

    <main>
      <img src="<%=results.data.attributes.posterImage.small%>"><br>
      <p class="description"><strong>
          <%=results.data.attributes.canonicalTitle%>
        </strong><br>
        <%=results.data.attributes.description%>
      </p>

      <form id="add-review-form" action="/reviews/<%=anime.id %>?_method=PUT" method="POST">
        <label for="content-textarea">Review:</label>
        <textarea name="content" id="content-textarea" placeholder="Type Here" requried>
    </textarea>
        <label for="rating-select">Rating:</label>
        <select name="rating" id="rating-select">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5" selected>5</option>
        </select>
        <button type="submit" class="btn btn-outline-primary">Add Review</button>
      </form>
      <button type="submit"> Add</button>
    </main>

    <%- include('../partials/footer') %>